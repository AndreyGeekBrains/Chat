<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="607.0" prefWidth="367.0" spacing="5.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
    <TextArea fx:id="chatTextArea" editable="false" prefHeight="554.0" prefWidth="181.0" style="-fx-border-width: 4;" stylesheets="@style.css" wrapText="true" />
        <HBox spacing="10.0">
            <TextField fx:id="messageText" onAction="#sendText" stylesheets="@style.css" text="hhfff" HBox.hgrow="ALWAYS" />
            <Button fx:id="sendMessageButton" minWidth="100.0" mnemonicParsing="false" onAction="#sendMessage" style="-fx-background-color: darkgrey; -fx-border-width: 1;" text="Send" textFill="#399980" />
        </HBox>
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
    </padding>
</VBox>
